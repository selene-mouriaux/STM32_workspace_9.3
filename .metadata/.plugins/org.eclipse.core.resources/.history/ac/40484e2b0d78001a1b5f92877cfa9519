#ifndef GAME_P4_H_
#define GAME_P4_H_

#define MATRIX_HEIGHT 6
#define MATRIX_WIDTH 7
#define PLAYER_UNKNOWN 0
//#define NO_PLAYER 0
//#define PLAYER_1 1
//#define PLAYER_2 2

#include <stdint.h>

typedef enum {
live, //!< Need to continue game
stop_winner, //!< game is finish and winner
stop_equal //<! game is finish and equal
} status_t;

typedef enum {
horiz ,
vert,
right_diag,
left_diag,
} victory_t;

typedef enum {
NO_PLAYER,
PLAYER_1,
PLAYER_2,
} player_t;

typedef struct {
int8_t l;
int8_t c;
} point_t;

typedef struct {
status_t status; //!< status of winner
victory_t win_type; //<!
player_t win_player; //<! the winner player
point_t win_position[4]; //!< position of 4 winner token
} winner_t;


void gp4_init(void);
/*
 * desc fn
 */

#endif /* GAME_P4_H_ */
